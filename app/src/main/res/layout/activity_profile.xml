<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Top App Bar area (keeps elevation + scroll coordination) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:elevation="4dp"
        app:liftOnScroll="true">

    <!-- Top Bar -->
        <FrameLayout
            android:id="@+id/purpleAppBar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_top_appbar_purple"
            android:clipToOutline="true"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="40dp">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="View and edit you profile here"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Use NestedScrollView for best Coordinator behavior -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/bottom_nav_inset"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Profile Card -->

            <!-- Preferences Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="13dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />

                <Button
                    android:id="@+id/btnChangeAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_button_pill"
                    android:text="Change Picture"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_primary" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="User Name"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="User bio..."
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â­ 0.0 (0 reviews)"
                    android:textColor="@color/text_primary" />

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_button_pill"
                    android:text="Edit Profile"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_primary" />

                <Button
                    android:id="@+id/btnHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_button_pill"
                    android:text="View Task History"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:text="Preferences"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:elevation="8dp"/>

                <Switch
                    android:id="@+id/switchDarkMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark Mode"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Task History Card -->
            <LinearLayout
                android:id="@+id/layoutHistory"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:elevation="13dp"
                android:visibility="gone">

                <TextView
                    android:text="Task History"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/bottomSpacer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_nav_inset" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- Bottom Navigation -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pillContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        app:shapeAppearanceOverlay="@style/Shape.Pill">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pill_nav"
        android:paddingHorizontal="8dp"
        app:itemIconSize="28dp"
        app:itemIconTint="@color/bottom_nav_item_tint_selector"
        app:itemRippleColor="@color/bottom_nav_ripple_color"
        app:itemTextColor="@color/bottom_nav_item_tint_selector"
        app:labelVisibilityMode="selected"
        app:layout_anchor="@+id/pillContainer"
        app:layout_anchorGravity="bottom|center"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

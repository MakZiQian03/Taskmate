<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.edu.utar.taskmate.MyTasksActivity">

    <FrameLayout
        android:id="@+id/purpleAppBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_top_appbar_purple"
        android:clipToOutline="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="48dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Tasks"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="View your posted and accepted tasks"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="160dp"
        android:paddingHorizontal="16dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tabButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPosted"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:textColor="@color/tab_button_text_selector"
                android:backgroundTint="@color/tab_button_bg_selector"
                android:text="Posted"
                android:textStyle="bold"
                app:rippleColor="@android:color/transparent"
                app:shapeAppearanceOverlay="@style/Shape.Pill"
                app:strokeWidth="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccepted"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:textColor="@color/tab_button_text_selector"
                android:backgroundTint="@color/tab_button_bg_selector"
                android:text="Accepted"
                android:textStyle="bold"
                app:shapeAppearanceOverlay="@style/Shape.Pill"
                app:rippleColor="@android:color/transparent"
                app:strokeWidth="0dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Posted tasks -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipePosted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/bottom_nav_inset">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textEmptyPosted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="You haven't posted any tasks yet."
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPosted"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
                        tools:listitem="@layout/item_task" />

                </FrameLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- Accepted tasks -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeAccepted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/bottom_nav_inset">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        tools:listitem="@layout/item_task" />

                    <TextView
                        android:id="@+id/textEmptyAccepted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="You haven't accepted any tasks yet."
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:visibility="gone" />
                </FrameLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <ProgressBar
                android:id="@+id/progress"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <!-- Floating pill container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pillContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="12dp"
        app:shapeAppearanceOverlay="@style/Shape.Pill">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pill_nav"
        android:paddingHorizontal="8dp"
        app:itemIconSize="28dp"
        app:itemIconTint="@color/bottom_nav_item_tint_selector"
        app:itemRippleColor="@color/bottom_nav_ripple_color"
        app:itemTextColor="@color/bottom_nav_item_tint_selector"
        app:layout_anchor="@+id/pillContainer"
        app:layout_anchorGravity="bottom|center"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
